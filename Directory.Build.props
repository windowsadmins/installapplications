# Build Configuration for InstallApplications

# Global settings
Configuration = "Release"
Platform = "Any CPU"
TargetFramework = "net8.0-windows"

# Output paths
OutputPath = "bin\$(Configuration)\"
PublishPath = "publish\"

# Build properties
TreatWarningsAsErrors = true
WarningsAsErrors = ""
WarningsNotAsErrors = "NU1701;IL2026"
NoWarn = ""

# Code analysis
RunAnalyzersDuringBuild = true
RunCodeAnalysis = true
CodeAnalysisRuleSet = ""

# Publish settings
PublishSingleFile = true
SelfContained = true
PublishTrimmed = true
IncludeNativeLibrariesForSelfExtract = true
DebugType = "none"
DebugSymbols = false

# Runtime identifiers
RuntimeIdentifiers = "win-x64;win-arm64"

# Test settings
CollectCoverage = true
CoverletOutputFormat = "cobertura,opencover"
CoverletOutput = "TestResults\"
Threshold = 80
ThresholdType = "line,branch,method"

# Version information
AssemblyTitle = "InstallApplications"
AssemblyDescription = "MDM-agnostic bootstrapping tool for Windows"
AssemblyCompany = "Windows Admins Open Source"
AssemblyProduct = "InstallApplications"
AssemblyCopyright = "Copyright Â© Windows Admins Open Source 2025"

# NuGet package settings
IncludeSymbols = false
IncludeSource = false
PackageRequireLicenseAcceptance = false
