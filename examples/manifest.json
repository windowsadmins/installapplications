{
  "$schema": "https://raw.githubusercontent.com/windowsadmins/installapplications/main/schema.json",
  "version": "1.0",
  "packages": [
    {
      "name": "Microsoft Edge",
      "type": "msi",
      "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/edge_installer.msi",
      "arguments": "/quiet ALLUSERS=1",
      "phase": "setupassistant",
      "required": true,
      "order": 1
    },
    {
      "name": "7-Zip",
      "type": "msi", 
      "url": "https://www.7-zip.org/a/7z2408-x64.msi",
      "hash": "abc123def456...",
      "arguments": "/quiet",
      "phase": "setupassistant",
      "required": false,
      "order": 2
    },
    {
      "name": "Adobe Reader",
      "type": "exe",
      "url": "https://repo.example.com/packages/AdobeReader.exe",
      "arguments": "/S",
      "phase": "userland",
      "required": false,
      "dependencies": ["Microsoft Edge"],
      "conditions": {
        "architecture": "x64",
        "file_exists": "C:\\Program Files\\Microsoft\\Edge\\Application\\msedge.exe"
      }
    },
    {
      "name": "Company Setup Script",
      "type": "ps1",
      "url": "https://repo.example.com/scripts/setup.ps1",
      "phase": "setupassistant",
      "required": true,
      "order": 0
    },
    {
      "name": "Chocolatey Package",
      "type": "nupkg",
      "url": "https://repo.example.com/packages/myapp.1.0.0.nupkg",
      "phase": "userland",
      "required": false
    }
  ],
  "settings": {
    "timeout": 3600,
    "retries": 3,
    "cleanup": true,
    "reboot_required": false,
    "log_level": "Information",
    "download_path": "C:\\ProgramData\\InstallApplications\\Downloads",
    "progress_ui": true
  }
}
