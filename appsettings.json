{
  "InstallApplicationsSettings": {
    "LoggingLevel": "Information",
    "RetryAttempts": 3,
    "RetryDelay": 5000,
    "DownloadTimeout": 300000,
    "ServiceTimeout": 1800000,
    "UserAgent": "InstallApplications-Windows/1.0",
    "MaxConcurrentDownloads": 3,
    "WorkingDirectory": "C:\\ProgramData\\InstallApplications",
    "ServiceName": "InstallApplications",
    "ServiceDisplayName": "Install Applications Service"
  },
  "Authentication": {
    "KeyVaultUrl": "",
    "UseSystemIdentity": false,
    "StorageConnectionStringSecret": "",
    "ServicePrincipalIdSecret": "",
    "ServicePrincipalSecretSecret": "",
    "TenantIdSecret": ""
  },
  "Architecture": {
    "x64": "x64",
    "arm64": "arm64"
  },
  "Conditions": {
    "architecture_x64": "Environment.Is64BitOperatingSystem && RuntimeInformation.OSArchitecture == Architecture.X64",
    "architecture_arm64": "RuntimeInformation.OSArchitecture == Architecture.Arm64",
    "is_domain_joined": "Environment.MachineName != Environment.UserDomainName",
    "is_azure_ad_joined": "Registry.GetValue(@\"HKEY_LOCAL_MACHINE\\SYSTEM\\CurrentControlSet\\Control\\CloudDomainJoin\\JoinInfo\", null, null) != null"
  }
}
